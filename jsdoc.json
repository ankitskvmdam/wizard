{
    "source": {
        "exclude": ["node_modules", "public/dist", "webpack.config.js"],
        "include": ["."]
    },

    "plugins": [
        "plugins/markdown"
    ],

    "opts": {
        "encoding": "utf8",
        "readme": "./README.md",
        "destination": "docs/",
        "recurse": true,
        "verbose": true,
        "template": "./node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "title": "Intermine Wizard",
            "footer": "Intermine-Wizard documentation. Github: <a href='https://github.com/intermine/wizard' target='_blank'>https://github.com/intermine/wizard</a>"
        }
    }
}